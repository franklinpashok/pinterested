<p id="notice"><%= notice %></p>
<div class="card">
<div class="card-header"><h2>Pins</h2></div>
<div class="card-body">
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin),  class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', pin, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Pin', new_pin_path, class: 'btn btn-success' %>
